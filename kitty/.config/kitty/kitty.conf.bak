#
# Typography / Text
#

font_family        Geist Mono
bold_font          Geist Mono
italic_font        Geist Mono Italic
bold_italic_font   Geist Mono Italic Bold Italic
font_size          26
disable_ligatures  always
cursor_shape       block


#
# Main options
#

# Performance - minimize latency
input_delay     0
repaint_delay   2
sync_to_monitor no

kitty_mod ctrl+shift
macos_option_as_alt                yes
macos_quit_when_last_window_closed yes
confirm_os_window_close            0
remember_window_position           yes

# Tabs
tab_bar_style       powerline
tab_powerline_style slanted
tab_activity_symbol none
tab_title_template  {"â‰£" if layout_name == "stack" else ""}{title}

# Number of lines of history to keep in memory for scrolling back.
scrollback_lines 10000

# URLs
url_style          curly
open_url_modifiers kitty_mod
open_url_with      default

copy_on_select no
strip_trailing_spaces smart

# Select text in a rectangular block with the mouse
rectangle_select_modifiers   ctrl+alt

# The modifiers to override mouse selection even when a terminal
# application has grabbed the mouse
terminal_select_modifiers shift

# Misc options
enable_audio_bell yes
background_opacity 1.0


#
# Key mappings
#

# Open new detached window with the current working directory
map cmd+enter new_window_with_cwd
map cmd+t     new_tab_with_cwd
map cmd+n     new_os_window_with_cwd

# Window management
map kitty_mod+up        scroll_line_up
map kitty_mod+k         scroll_line_up
map kitty_mod+down      scroll_line_down
map kitty_mod+j         scroll_line_down
map kitty_mod+page_up   scroll_page_up
map kitty_mod+page_down scroll_page_down
map kitty_mod+home      scroll_home
map kitty_mod+end       scroll_end
map kitty_mod+h         show_scrollback
map cmd+]               next_window
map cmd+Right           next_window
map cmd+[               previous_window
map cmd+Left            previous_window

# Layouts management
map cmd+shift+enter toggle_layout stack
map f1 goto_layout  horizontal
map f2 goto_layout  vertical
map f3 goto_layout  grid

# Tab management
map cmd+shift+right next_tab
map cmd+shift+left  previous_tab
map kitty_mod+t     new_tab
map kitty_mod+q     close_tab
map kitty_mod+.     move_tab_forward
map kitty_mod+,     move_tab_backward
map kitty_mod+alt+t set_tab_title

# Allow alt+arrows to move by words
map alt+left send_text all \x1b\x62
map alt+right send_text all \x1b\x66


#
# Theme
#

# BEGIN_KITTY_THEME
# Dark Pastel
include current-theme.conf
# END_KITTY_THEME
